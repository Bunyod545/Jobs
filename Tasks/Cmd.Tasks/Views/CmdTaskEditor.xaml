<dataEditor:BaseTaskDataEditor x:Class="Cmd.Tasks.Views.CmdTaskEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dataEditor="clr-namespace:Jobs.Tasks.Common.Logics.DataEditor;assembly=Jobs.Tasks.Common"
        mc:Ignorable="d"
        Title="Cmd task data editor" Height="220.609" Width="256.25" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="SftpCopyTaskEditor_OnLoaded">
    <Grid>

        <Label Content="Cmd Text" HorizontalAlignment="Left" Margin="2,10,0,0" VerticalAlignment="Top" Height="29" Width="61"/>
        <TextBox TextWrapping="Wrap" Text="{Binding CmdText}" HorizontalAlignment="Left" Height="138" Margin="68,16,0,0" VerticalAlignment="Top" Width="158"/>

        <Button Content="Save" HorizontalAlignment="Left" Height="21" Margin="68,159,0,0" VerticalAlignment="Top" Width="77" Click="SaveButton_Click" />
        <Button Content="Cancel" HorizontalAlignment="Left" Height="21" Margin="149,159,0,0" VerticalAlignment="Top" Width="77" Click="CancelButton_Click"/>
    </Grid>
</dataEditor:BaseTaskDataEditor>
